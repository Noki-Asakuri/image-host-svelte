// learn more about it in the docs: https://pris.ly/d/prisma-schema

generator client {
    provider = "prisma-client-js"
}

datasource db {
    provider = "postgresql"
    url      = env("DATABASE_URL")
}

model User {
    id String @id @default(uuid())

    name String @unique
    key  String @unique @default(uuid())

    Useer Image[] @relation(name: "User")
    Key   Image[] @relation(name: "Key")
}

model Image {
    id Int @id @default(autoincrement())

    name   String
    type   String
    author String
    path   String
    key    String

    publicUrl   String @unique
    imageID     String @unique
    invisibleID String @unique

    uploadAt DateTime @default(now())

    user    User @relation(fields: [author], references: [name], onDelete: Cascade, name: "User")
    api_key User @relation(fields: [key], references: [key], onDelete: Cascade, name: "Key")

    @@index([imageID, invisibleID])
}
